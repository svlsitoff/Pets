@model WebApp.Models.Pet

@{
    ViewData["Title"] = "Pet health";
}

<h1>Details</h1>

<div>
    <h4>Pet</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kind)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kind)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PetPicture)
        </dt>
        <dd class = "col-sm-10">
            <div class="form-group">
                <input type="hidden" asp-for="PetPicture" class="form-control">

                @if (Model.Kind == "Cat")
                {
                    <img src="~/images/@Model.PetPicture"
                         class="rounded-circle"
                         height="70" width="100"
                         asp-append-version="true" />
                }
                @if (Model.Kind == "Dog")
                {
                    <img src="~/images/@Model.PetPicture"
                         class="rounded-circle"
                         height="70" width="100"
                         asp-append-version="true" />
                }


            </div>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HealthStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HealthStatus)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Health < 2)
    {
        <a asp-action="Edit" asp-route-id="@Model.ID">Pet treatment</a><span>|</span>
    }
    <a asp-action="Index">Back to List</a>
</div>
